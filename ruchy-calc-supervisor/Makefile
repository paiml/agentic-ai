	@ruchy calculator.ruchy
	@echo "âœ… All tests passed"

run: ## Run the calculator demo
	@echo "ðŸš€ Running Ruchy Calculator Supervisor..."
	@ruchy calculator.ruchy

build: ## Validate demo syntax
	@echo "ðŸ”¨ Validating calculator syntax..."
	@ruchy check calculator.ruchy
	@echo "âœ… Validation successful"

lint: ## Run linting and formatting
	@echo "ðŸ” Linting Ruchy code..."
	@ruchy check calculator.ruchy
	@echo "âœ… Linting successful"

coverage: ## Generate test coverage report
	@echo "ðŸ“Š Generating Ruchy coverage report..."
	@mkdir -p coverage
	@ruchy coverage --format html calculator.ruchy > coverage/calculator.html
	@echo "Coverage report generated: coverage/calculator.html"

check: ## Quick syntax check
	@echo "âš¡ Quick syntax check..."
	@ruchy check calculator.ruchy

clean: ## Clean temporary files
	@echo "ðŸ§¹ Cleaning temporary files..."
	@find . -name "*.tmp" -delete 2>/dev/null || true
	@echo "ðŸ§¹ Clean completed"

all: test run ## Run tests then demo
	@echo "âœ… All tasks completed"

help: ## Show this help
	@grep -E '^[a-zA-Z_-]+:.*?## .*$$' $(MAKEFILE_LIST) | awk 'BEGIN {FS = ":.*?## "}; {printf "%-15s %s\n", $$1, $$2}'

.DEFAULT_GOAL := help
